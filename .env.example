# COMPASS Environment Configuration
# Copy this file to .env and fill in your values

# ===================================
# Environment
# ===================================
ENVIRONMENT=dev  # dev, test, prod
LOG_LEVEL=INFO   # DEBUG, INFO, WARNING, ERROR

# ===================================
# Redis Configuration
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Uncomment and set if using password

# ===================================
# PostgreSQL Configuration
# ===================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=compass
POSTGRES_USER=compass
POSTGRES_PASSWORD=compass_dev

# ===================================
# LLM Provider Settings
# ===================================
# Get API keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/

# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

DEFAULT_LLM_PROVIDER=openai  # openai, anthropic
DEFAULT_MODEL_NAME=gpt-4o-mini
ORCHESTRATOR_MODEL=gpt-4

# ===================================
# Investigation Limits
# ===================================
MAX_INVESTIGATION_TIMEOUT_SECONDS=300  # 5 minutes max
DEFAULT_COST_BUDGET_USD=10.0           # $10 for routine investigations
CRITICAL_COST_BUDGET_USD=20.0          # $20 for critical incidents
MAX_PARALLEL_AGENTS=7                  # ICS span of control: 3-7

# ===================================
# Feature Flags
# ===================================
ENABLE_LEARNING=true         # Learn from investigations
ENABLE_CACHING=true          # Cache LLM responses
ENABLE_OBSERVABILITY=true    # OpenTelemetry tracing
